<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Serve static assets directly (prevent SPA fallback for asset requests)
    # This ensures requests for CSS/JS/images/etc are not rewritten to index.html
    RewriteRule \.(css|js|png|jpg|jpeg|gif|svg|ico|json|webmanifest|woff2|woff|ttf)$ - [L,NC]

    # If the request matches an existing file or directory, serve it
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # For API requests that reach this point, forward to Laravel's index.php
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteRule ^(.*)$ ../index.php [QSA,L]

    # Everything else should serve the SPA entrypoint (index.html)
    RewriteRule ^ index.html [L]
</IfModule>

<IfModule !mod_rewrite.c>
    <FilesMatch "^(index\.php)$">
        Require all granted
    </FilesMatch>
</IfModule>
